<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    app:cardElevation="5dp"
    android:layout_marginBottom="9dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_restaurant"
            android:scaleType="centerCrop"
            android:src="@drawable/back"
            android:layout_below="@id/name_restaurant"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_restaurant"
            android:textSize="22sp"
            android:text="Name of Restaurant"
            android:gravity="center"
            android:background="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_restaurant"
            android:textSize="22sp"
            android:text="Description"
            android:gravity="center"
            android:background="@color/white"
            android:layout_below="@id/name_restaurant"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location_restaurant"
            android:textSize="22sp"
            android:text="Location"
            android:gravity="center"
            android:background="@color/white"
            android:layout_below="@id/description_restaurant"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/information_1_restaurant"
            android:textSize="22sp"
            android:text="Information1"
            android:gravity="center"
            android:background="@color/white"
            android:layout_below="@id/location_restaurant"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/information_2_restaurant"
            android:textSize="22sp"
            android:text="Information2"
            android:gravity="center"
            android:background="@color/white"
            android:layout_below="@id/information_1_restaurant"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>